files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/01_set_env.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      for var in $(/opt/elasticbeanstalk/bin/get-config environment | jq -r 'to_entries|map("\(.key)=\(.value|tostring)")|.[]'); do
        export $var
      done
